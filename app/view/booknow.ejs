<%- include('head'); -%>
<%- include('nav'); -%>
<div style="height:50px;"></div>
    <main id="main" class="main-page">
    <section class="why-us section-bg" data-aos="fade-up" date-aos-delay="200" >
      <div class="container-fluide">
        <div class="row">
          <div class="col-lg-12 video-box" style="background: rgba( 255, 255, 255, 0.25 );box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );backdrop-filter: blur( 4px );-webkit-backdrop-filter: blur( 4px ); border-radius: 10px;border: 1px solid rgba( 255, 255, 255, 0.18 );">
            <section id="speakers-details">
              <div class="container">
                <div class="section-header">
                  <h2>Book Now</h2>
                  <p>THE SKY HOTEL</p>
                  <div class="row">
                    <div class="col-6">
                      <form action="" method="post">
                        <div class="form-group">
                          <label>Name</label>
                          <input type="text" class="form-control" name="name">
                        </div>
                        <div class="form-group">
                          <label>Email</label>
                          <input type="text" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                          <label>Mobile</label>
                          <input type="text" class="form-control" name="mobile">
                        </div>
                        <div class="form-group">
                          <label>Country</label>
                          <input type="text" class="form-control" name="country">
                        </div>
                        <div class="form-group">
                          <label>address</label>
                          <input type="text" class="form-control" name="address">
                        </div>
                        <div class="form-group">
                          <label>city</label>
                          <input type="text" class="form-control" name="city">
                        </div>
                        <div class="form-group">
                          <label>Additional Details and Preferences</label>
                          <textarea class="form-control" name="name"></textarea>
                        </div>
                        <div class="form-group">
                          <label><span><input type="checkbox" name="singin" style="width: 15px; height: 15px;"></span><span> Sign in</span></label>
                        </div><br>
                        <div class="form-group">
                          <input type="submit" class="btn btn-success" name="name" value="Complete Booking">
                        </div>
                      </form>
                    </div>
                    <div class="col-6">
                      <div class="card">
                        <h4>Your Stay</h4>
                        <div class="row">
                        <div class="col-6">
                          <p>Check-in<br>After 2:00 PM</p>
                        </div>
                        <div class="col-6">
                          <p>Check-out<br>Before 12:00 PM</p>
                        </div>
                        <div class="col-12">
                          <hr>
                        </div>
                        <div class="co-12">
                          <p style="text-align: justify;"><%=date.format((new Date(rebo.checkin)),
                            'ddd, MMM DD, YYYY');%> - <%=date.format((new Date(rebo.checkout)),
                            'ddd, MMM DD, YYYY');%><br>
                          1 Adult<br>
                          </p>
                        </div>
                        <div class="col-6">
                          <p style="text-align: justify;"><%=hotels.room_type%><br>
                          Best Available Rate Room Only</p>
                        </div>
                        <div class="col-6">
                        <p>₹<%=hotels.price%><br>
                          1 Night</p>
                        </div>
                        <div class="col-6">
                          <p style="text-align: justify;">Taxes and Fees<br>
                          Details<br></p>
                        </div>
                        <div class="col-6">
                        <p>₹<%=hotels.price%><br>
                          (INR tax included )</p>
                        </div>
                        </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </section>
          </div>
        </div>
      </div>
    </section>
    </main>
  <!-- ======= Footer ======= -->
  <%- include('foot'); -%>